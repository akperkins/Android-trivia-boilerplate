<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resultsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dany_port" >

    <TextView
        android:id="@+id/endView1"
        style="@style/CustomTheme.View.TextView"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:text="TextView" >
    </TextView>

    <TextView
        android:id="@+id/scoreText"
        style="@style/CustomTheme.View.Button.SpecialAttention"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Score: 1000"
        android:layout_below="@id/endView1"
        android:textSize="@dimen/largeText" >
    </TextView>

    <Button
        android:id="@+id/endbutton1"
        style="@style/CustomTheme.View.Button"
        android:layout_alignParentBottom="true"
        android:text="Try again!" >
    </Button>

    <Button
        android:id="@+id/backMain"
        style="@style/CustomTheme.View.Button"
        android:layout_above="@id/endbutton1"
        android:text="Back to Main Menu" >
    </Button>
    
    <Button
        android:id="@+id/rateApp"
        style="@style/CustomTheme.View.Button"
        android:layout_above="@id/backMain"
        android:text="Rate this App" >
    </Button>

</RelativeLayout>