<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">#111</item>
    </style>

    <style name="CustomTheme.View">
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="CustomTheme.View.Button">
        <item name="android:background">@drawable/rounded_bordered_click_button</item>
    </style>

    <style name="CustomTheme.View.TextView">
        <item name="android:background">@drawable/rounded_bordered_textview</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>