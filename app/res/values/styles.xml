<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFA500</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="CustomTheme.Button">
        <item name="android:background">@drawable/rounded_bordered_button</item>
    </style>

    <style name="CustomTheme.TextView">
        <item name="android:background">@drawable/rounded_bordered_textview</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>